{
    "name": "payum-tw/ecpay",
    "type": "project",
    "description": "The Payum extension. 綠界金流",
    "keywords": ["綠界", "金流程式", "Payum", "PayumTW"],
    "homepage": "http://payum.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Kotlyar Maksim",
            "email": "kotlyar.maksim@gmail.com"
        },
        {
            "name":     "Payum project",
            "homepage": "http://payum.org/"
        },
        {
            "name":     "Community contributions",
            "homepage": "https://github.com/Payum/AuthorizeNetAim/contributors"
        },
        {
            "name":     "Recca Tsai",
            "email":    "recca0120@gmail.com"
        }
    ],
    "require": {
        "payum/core": "^1.3.6",
        "mobiledetect/mobiledetectlib": "^2.8"
    },
    "require-dev": {
        "mockery/mockery": "~0.9.4|~1.0",
        "phpunit/phpunit": "~4.8|~5.4|~6.3|~7.0",
        "nesbot/carbon": "~1.20",
        "php-http/guzzle6-adapter": "^1.0"
    },
    "autoload": {
        "files": [
            "sdk/ECPay.Payment.Integration.php",
            "sdk/ECPay.Logistics.Integration.php"
        ],
        "psr-4": {
            "PayumTW\\Ecpay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PayumTW\\Ecpay\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
